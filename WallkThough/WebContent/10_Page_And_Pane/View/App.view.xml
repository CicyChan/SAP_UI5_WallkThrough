<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  controllerName="BootStrap.Page.controller.App" 
  xmlns="sap.m"
  displayBlock= "true">
  <App>
  	<pages>
  		<Page title = "{i18n>homePageTitle}">
  			<content>
  			<Panel headerText = "{i18n>helloPanelTitle}">
  					<Button
					 text = "{i18n>shownHelloButtonText}"
					 press = "OnShowMessage" />
					 <Input 
					 value = "{/receipt/name}"
					 description = "hello {/receipt/name}"
					 valueLiveUpdate = "true"
					 width = "60%"/>
  			</Panel>
  			</content>
  		</Page>
  	</pages>
  </App>
</mvc:View>