<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  controllerName="BootStrap.ReuseDialog.controller.App" 
  xmlns="sap.m"
  displayBlock= "true">
  <App class = "myAppDemoWT">
  	<pages>
  		<Page title = "{i18n>homePageTitle}">
  			<headerContent>
  				<Button
  					icon = "sap-icon://hello-world"
  					press = "onOpenDialog" 
  				/>
  			</headerContent>
  			<content>
  				<mvc:XMLView viewName = "BootStrap.ReuseDialog.View.HelloPanel" />
  			</content>
  		</Page>
  	</pages>
  </App>
</mvc:View>